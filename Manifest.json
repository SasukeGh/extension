{
  "manifest_version": 2,
  "name": "Keep Site Active",
  "version": "1.0",
  "description": "Keeps a website active in the background.",
  "permissions": [
    "tabs",
    "activeTab",
    "background"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Keep Site Active"
  },
  "icons": {
    "48": "Icons/icon.png"
  },
  "applications": {
    "gecko": {
      "id": "keep-site-active@example.com",
      "strict_min_version": "68.0"
    }
  },
  "update_url":"https://SasukeGh.github.io/extension/updates.json"
}
